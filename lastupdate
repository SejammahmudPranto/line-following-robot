int li,ri;
if(x>500) {
  ri=0;
} else {
  ri=1;
}
if(y>500) {
  li=0;
} else {
  li=1;
}*/
ri=digitalrdright();
li=digitalrdleft();
Serial.print("ri=");
Serial.println(ri);
Serial.print("li=");
Serial.println(li);

delay(1000);

  
  // put your main code here, to run repeatedly:

}
