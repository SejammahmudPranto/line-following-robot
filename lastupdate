int leftir=A2;
int rightir=A0;

const int vspeed=130;
const int turnspeed=230;
const int turndelay=10;

int digitalrdright() {
  int ri;
  int x=analogRead(rightir);
  if(x>500) {
  ri=0;
} else {
  ri=1;
} return ri;
}

int digitalrdleft() {
  int li;
  int y=analogRead(leftir);
  if(y>500) {
  li=0;
} else {
  li=1;
} return li;
}


void setup() {
  pinMode(A0, INPUT);
  pinMode(A2, INPUT);
  Serial.begin(9600);
  
  // put your setup code here, to run once:

}

